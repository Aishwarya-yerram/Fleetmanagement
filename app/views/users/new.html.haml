%h2 Signup page


- if @user.errors.any?
	.row
		.col-xs-8.col-xs-offset-2
			.panel.panel-danger
				.panel-heading
					%h2.panel-title
						= pluralize(@user.errors.count, "error")
						prohibited user account from being saved:
					.panel-body
						%ul
						- @user.errors.full_messages.each do|msg|
							%li= msg
= form_for @user do |f|			
	= f.label :email, "Email"
	= f.text_field :email
	%br
	%br
	= f.label :name, "Name"
	= f.text_field :name
	%br
	%br
	= f.label :password, "Password"
	= f.password_field :password
	%br
	%br
	=f.label :password, "Password confirmation"
	=f.password_field :password_confirmation
	%br
	%br
	= f.label :DOB, "DOB"
	= f.date_select :DOB 
	%br
	%br
	= f.label :Gender, "Gender" 
	= f.select(:Gender, options_for_select([['male','male'],['female','female']]))
	%br
	%br
	= f.label :type, "Type of user" 
	= f.select(:type, options_for_select([['Seller','Seller'],['Buyer','Buyer']]))
	%br
	%br
	= f.submit 'signup' 